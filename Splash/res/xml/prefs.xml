	<ListPreference android:title="Color of Particles"
		android:key="color_select" android:entries="@array/choices"
		android:entryValues="@array/values" android:defaultValue="G"
		android:summary="Does not affect Star Dust" />

	<ListPreference android:title="Color of Tails"
		android:key="tail_select" android:entries="@array/tails"
		android:entryValues="@array/tail_values" android:defaultValue="G"
		android:summary="Does not affect Star Dust" />

	<ListPreference android:title="Walls" android:key="wall_select"
		android:entries="@array/walls" android:entryValues="@array/wall_values"
		android:defaultValue="bounce" android:summary="How your particles will react to walls"/>
		
	<ListPreference android:title="Particle Style" android:key="style_select"
		android:entries="@array/styles" android:entryValues="@array/style_values"
		android:defaultValue="classic" android:summary="The type of particles in your Universe"/>

	<!-- <ListPreference android:title="Number of Particles"
